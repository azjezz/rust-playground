{% extends 'layout.html.twig' %}

{% block content %}
    <section class="uk-padding-large uk-margin-large uk-padding-remove-bottom">
        <div class="uk-flex uk-flex-center">
            <div class="uk-width-1-3@m uk-child-width-1-1" uk-grid>
                <div>
                    <div class="uk-card uk-card-default uk-card-body">
                        <form method="POST" action="/new">
                            <div class="uk-margin">
                                <label>
                                    <textarea name="text" class="uk-textarea" rows="3"
                                            placeholder="What's on your mind?"></textarea>
                                </label>
                            </div>

                            <input type="submit" class="uk-button uk-button-primary" value="Submit"/>
                        </form>
                    </div>
                </div>
                {% for note in notes %}
                    <div>
                        <div class="uk-card uk-card-default uk-card-body">
                            <p>{{ note.text }}</p>

                            <hr />
                            <form method="POST" action="/delete/{{ note.id }}">
                                <button type="submit" class="uk-button uk-button-text">DELETE</button>
                            </form>    
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </section>
{% endblock %}
